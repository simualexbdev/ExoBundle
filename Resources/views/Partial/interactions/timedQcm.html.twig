<link href="{{ asset('bundles/ujmexo/css/interactionTimedQcm.css') }}" type="text/css" rel="stylesheet"/>
<div>
    <div class="form-group row">
        <div id="TimedQcmLimitedTime">
            {{ form_label(form.limitedTime) }}
            <div id="limitedTimeCheckbox" class="col-md-1">{{ form_widget(form.limitedTime) }}</div>
        </div>

        <!-- disabled -->
        <div id="duration">
            <label id="labelDuration" class="control-label col-md-1">{{'Inter_TimedQcm.duration' | trans }}</label>
            <div id="select_duration" class="col-md-2 {% if not form.duration.vars.valid %} has-error{% endif %}">
                {{ form_widget(form.duration) }}
                {{ form_errors(form.duration) }}
            </div>
        </div>
    </div>

    <!-- disabled off-->
    <div class="form-group row">
        <div id="TimedQcmweightChoice">
            {{ form_label(form.weightResponse) }}
            <div id="weightChoiceCheckbox" class="col-md-1">{{ form_widget(form.weightResponse) }}</div>
        </div>
        <!-- disabled -->
        <div id="scoreResponse">
            <label id="labelRightResponse" class="control-label col-md-1">{{'score_right_label' | trans }}</label>
            <div class="col-md-2 {% if not form.scoreRightResponse.vars.valid %} has-error{% endif %}">
                {{ form_widget(form.scoreRightResponse) }}
                {{ form_errors(form.scoreRightResponse) }}
            </div>
            <label id="labelFalseResponse" class="control-label col-md-1">{{ 'score_false_label' | trans }}</label>
            <div class="col-md-2 {% if not form.scoreFalseResponse.vars.valid %} has-error{% endif %}">
                {{ form_widget(form.scoreFalseResponse) }}
                {{ form_errors(form.scoreFalseResponse) }}
            </div>
        </div>
    </div>
    <!-- disabled off-->

    <div id="TimedQcmshuffle" class="form-group row">
        {{ form_label(form.shuffle) }}
        <div class="col-md-9">{{ form_widget(form.shuffle) }}</div>
    </div>

    <div id="typeTimedQcm" class="form-group row">
    {{ form_row(form.typeTimedQcm) }}
    </div>

    <div>
        <label >{{ 'Inter_TimedQcm.html' | trans }}</label>
        <div>{{ form_widget(form.htmlCourseComplement) }}</div>
    </div>

    <div id="choiceError" class="{% if not form.choices.vars.valid %} has-error{% endif %}"></div>

    <div id="tableChoice"></div>
        {{ form_errors(form.choices) }}
        {{ form_row(form.choices) | replace({"col-md-3": "col-md-12"}) | raw }}


</div>
